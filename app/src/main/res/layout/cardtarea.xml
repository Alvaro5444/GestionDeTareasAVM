<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/tarea"
            android:contentDescription="Icono Tarea"
            android:layout_marginEnd="16dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvIdTarea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID: "
                android:textSize="12sp"
                android:textColor="#9E9E9E"/>

            <TextView
                android:id="@+id/tvTituloTarea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Título de la Tarea"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#212121"/>

            <TextView
                android:id="@+id/tvDescripcionTarea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descripción"
                android:textSize="14sp"
                android:textColor="#757575"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tvFechaTarea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha: "
                android:textSize="12sp"
                android:layout_marginTop="6dp"/>

            <TextView
                android:id="@+id/tvCompletadaTarea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completada: "
                android:textSize="12sp"
                android:textStyle="italic"
                android:layout_marginTop="2dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/tvIdCategoriaTarea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cat ID: "
                    android:textSize="11sp"
                    android:layout_marginEnd="12dp"/>

                <TextView
                    android:id="@+id/tvIdUsuarioTarea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User ID: "
                    android:textSize="11sp"/>
            </LinearLayout>

        </LinearLayout>

        <ImageButton
            android:id="@+id/btnEliminarTarea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_delete"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:contentDescription="Eliminar tarea"
            app:tint="#D32F2F" />

    </LinearLayout>

</androidx.cardview.widget.CardView>